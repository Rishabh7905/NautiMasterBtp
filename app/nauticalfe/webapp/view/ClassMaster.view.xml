<mvc:View
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    controllerName="nauticalfe.controller.ClassMaster"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
>
    <Page id="_IDGenPage1" showHeader="false" showFooter="false">
        
        <tnt:ToolHeader id="_IDGenToolHeader1"  class="sapUiTinyMargin">
                    <Button visible="true" icon="sap-icon://nav-back" type="Transparent" id="_IDGenButton2" press="onBackPress" tooltip="Backpress"/>
                    <Button visible="true" icon="sap-icon://home" type="Transparent" id="_IDGenButton3" press="onPressHome" tooltip="Home"/>
        
                    <Image id="_IDGenImage1" class="size1"
                        src="./images/ignxlogo.png"
                        height="65%"/>

                    <ToolbarSpacer id="_IDGenToolbarSpacer1"  width="15px" />
                    <Title text=" Maintain Class Master" wrapping="true" id="productName"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer2"/>
                    <Avatar id="_IDGenAvatar1" src="" displaySize="XS" press=".onAvatarPressed" tooltip="Profile"/>
                
        </tnt:ToolHeader>

        <Panel class="tablepanel">
        <Bar
            id="_IDGenBar12"
            class="headerBar2"
         >
            <contentLeft>
                <Button
                    id="entryBtn"
                    text="New Entries"
                    press="newEntries"
                />
                <Button
                    id="copyBtn"
                    text="Copy As"
                    press="pressCopy"
                />
                <Button
                    id="deleteBtn"
                    text="Delete"
                    press="onDeletePress"
                />
                <Button
                    id="editBtn"
                    text="Edit"
                    press="pressEdit"
                />
                
                <Button
                    id="button"
                    icon="sap-icon://slim-arrow-down"
                    iconFirst="false"
                    text="More"
                    press="onPressMore"
                    ariaHasPopup="Menu"
                />
            </contentLeft>
         
        </Bar>
        <ScrollContainer id="scrollContainer" height="calc(100% - 50px)" vertical="true" class="scrollContainer">

        
        <Table
            id="createTypeTable"
            mode="MultiSelect"
            items="{/ClassMasterSet}"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="100%"
            class="mastertables"
            sticky="ColumnHeaders"
            noDataText="loading ..."
            
        >
            <columns>
                <Column id="_IDGenColumn1">
                    <Text
                        id="_IDGenText11"
                        text="Value"
                    />
                </Column>
                <Column id="_IDGenColumn2">
                    <Text
                        id="_IDGenText2"
                        text="Field Description"
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                     
                        <Text
                            id="_IDGenInput1"
                            text="{ZfValue}"
                        />
                       
                         <HBox >
                        <Input
                            id="_IDGenInput2"
                            value="{ZfDesc}"
                            editable="false"
                            width="400px"
                            maxLength="30"

                        />
                        <Button id="update" class="sapUiTinyMarginBegin" text="Update" icon="sap-icon://save" type="Accept" visible="false"  press="onUpdatePressBtn"></Button>
                        <Button id="delete" class="sapUiTinyMarginBegin" text="Cancel" icon="sap-icon://delete" type="Reject" visible="false" press="onCancelPressBtn"></Button>
                        </HBox>
                        
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        </ScrollContainer>
        </Panel>
        <Table
            id="entryTypeTable"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="100%"
             class="tablepanel entrytables"
            visible="false" mode="MultiSelect" >

            <columns>
                <Column>
                    <Text text="Value" />
                </Column>
                <Column>
                    <Text text="Field Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Input id="CLASSFIELD" maxLength="1" liveChange="onCodeLiveChange"/>
                        <Input id="CLASSDESC"  />
                    </cells>
                </ColumnListItem>
            </items>
            
        </Table>



        <Table
            id="updateTypeTable"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="100%"
            class="mastertables"
            visible="false"
           
        >
            <columns>
                <Column>
                    <Text text="Value" />
                </Column>
                <Column>
                    <Text text="Field Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text id="CLASSFIELD1" text=""/>
                        <Input id="CLASSDESC1"  editable="true"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <!-- <Button id="_IDGenButton2" text="Add Row" press="updateTableRefresh" /> -->
        
            <!-- footers for both pages are coded differently as save functionality is different in
        both main page and new entries page  -->

            <!-- main page footer -->
            <OverflowToolbar
                id="mainPageFooter"
                design="Auto"
                visible="false"
            >
                <ToolbarSpacer id="_IDGenToolbarSpacer3" />
                <Button id="add" icon="sap-icon://sys-add" press=".onAddRow1" text="Add Row" type="Success"></Button>
                <Button id="minus" icon="sap-icon://sys-minus" press=".onDeleteRow1" text="Delete Row" type="Reject"></Button>

                <Button
                    id="mainPageSave"
                    text="Save"
                    press="onSave"
                />
                <Button
                    id="_IDGenButton22"
                    text="Cancel"
                    press="onCancel"
                />
            
            </OverflowToolbar>
             <OverflowToolbar
                id="mainPageFooter2"
                design="Auto"
                visible="false"
            >
                <ToolbarSpacer id="_IDGenToolbarSpacer4" />
                <Button
                    id="mainPageSave12"
                    text="Update"
                    press="onUpdate"
                />
                <Button
                    id="_IDGenButton23"
                    text="Cancel"
                    press="onCancel"
                />
            </OverflowToolbar>

            
            
        
    </Page>

    <!--scrollbar added-->
    <ScrollContainer
        id="_IDGenScrollContainer1"
        height="100%"
        width="100%"
        vertical="true"
        focusable="true"
    >
        <!--this is first page-->
    </ScrollContainer>
</mvc:View>